<div class="container-fluid index-body">

		<table>
			<thead>
					<tr>
						<td><h2>Name</h2></td>
						<td><h2>Category</h2></td>
					</tr>
					<tr>
						<%= link_to "New Recipe", new_recipe_path %>
					</tr>
			</thead>
			<% @recipes.each do |recipe| %>
				<tr>
					<td><%= recipe.name %></td>
					<td><%= recipe.category %></td>
					<td><%= link_to "Details", recipe_path(recipe) %></td>
				</tr>
			<% end %>
		</table>
		<div class="embed-container">
			<%= embed("https://www.youtube.com/watch?v=EsPeUKf7NDA") %>
		</div>
</div>